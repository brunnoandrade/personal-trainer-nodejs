{
  "extends": ["prettier", "eslint:recommended"],
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "max-len": ["warn", { "code": 100 }],
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["error", "unix"]
  }
}
